<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#26898989"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="30dp"
       android:background="@drawable/edittxt"
       app:cardCornerRadius="30dp"
       app:cardElevation="40dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:orientation="vertical"
          android:padding="24dp">


         <TextView
             android:id="@+id/loginText"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Converter"
             android:textAlignment="center"
             android:textColor="#007473"
             android:textSize="40sp"
             android:textStyle="bold" />

         <EditText
             android:id="@+id/value"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:layout_marginTop="40dp"
             android:background="@drawable/edittxt"
             android:drawablePadding="8dp"
             android:hint="Enter the value"
             android:inputType="number"
             android:padding="8dp"
             android:textColor="@color/black"
             android:textColorHighlight="@color/cardview_dark_background" />

         <Button
             android:id="@+id/conf"
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:layout_marginTop="30dp"
             android:backgroundTint="#007473"
             android:text="Convert 째C to 째F"
             android:textSize="25sp"
             app:cornerRadius="15dp" />

         <Button
             android:id="@+id/conc"
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:layout_marginTop="30dp"
             android:backgroundTint="#007473"
             android:text="Convert 째F to 째C"
             android:textSize="25sp"
             app:cornerRadius="15dp" />


      </LinearLayout>

   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="30dp"
       android:background="@drawable/edittxt"
       app:cardCornerRadius="30dp"
       app:cardElevation="10dp">

      <TextView
          android:id="@+id/Answer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Answer"
          android:textAlignment="center"
          android:textColor="#007473"
          android:textSize="35sp"
          android:textStyle="bold" />


   </androidx.cardview.widget.CardView>
</LinearLayout>